@using Application.Services.Departments;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@model IEnumerable<DepartmentResponse>

<div class="d-flex justify-content-end mb-2 p-3">
  <a class="btn btn-primary" asp-action="" asp-controller="">Create</a>
</div>
<table>
  <thead>
    <tr>
      <td>@Html.DisplayNameFor(e => e.Name)</td>
      <td>@Html.DisplayNameFor(e => e.Location)</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    @foreach(var record in Model)
    {
      <tr>
        <td>@record.Name</td>
        <td>@record.Location</td>
        <td>
          <button class="btn btn-danger">Delete</button>
        </td>
      </tr>
    }
  </tbody>
</table>

<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <input hidden id="id"/>
          <div class="mb-2">
            <label>Name</label>
            <input id="name" />
          </div>
          <div class="mb-2">
            <label>Location</label>
            <input id="location"/>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>