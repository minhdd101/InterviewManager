@{
    //success messages
    var successMessages = new List<string>();
    if (TempData["fukui_notify_info"] != null)
    {
        successMessages.AddRange(TempData["fukui_notify_info"] as IList<string>);
    }
    if (ViewData["fukui_notify_info"] != null)
    {
        successMessages.AddRange(ViewData["fukui_notify_info"] as IList<string>);
    }


    //error messages
    var errorMessages = new List<string>();
    if (TempData["fukui_notify_error"] != null)
    {
        errorMessages.AddRange(TempData["fukui_notify_error"] as IList<string>);
    }
    if (ViewData["fukui_notify_error"] != null)
    {
        errorMessages.AddRange(ViewData["fukui_notify_error"] as IList<string>);
    }
}
@if (successMessages.Count > 0 || errorMessages.Count > 0)
{
    <div class="row">
        <div class="notify-bottom offset-md-6 col-md-6 offset-xl-8 col-xl-4">
            @foreach (var message in successMessages)
            {
                <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="fa fa-check-circle" aria-hidden="true"></i> @message
                </div>
            }

            @foreach (var message in errorMessages)
            {
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="fa fa-close" aria-hidden="true"></i> @message
                </div>
            }
        </div>
    </div>
}
